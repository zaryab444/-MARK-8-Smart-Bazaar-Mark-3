@model SmartBazar.Models.tbl_Admin

@{
    Layout = null;
}

@using (@Html.BeginForm())
{
    <div> <h1> Admin LOGIN</h1></div>


    @Html.TextBoxFor(x => x.ad_username, new { @class = "form-control", @placeholder = "Username" })


    @Html.PasswordFor(x => x.ad_password, new { @class = "form-control", @placeholder = "Password" })


    <div class="form-group">
        @*<asp:Button ID="Button1" runat="server" Text="Log In" class="form-control  btn-success" OnClick="Button1_Click" OnClientClick="retrun(passwordmatchfunc())" />*@
        <input type="submit" value="Login" class="btn btn-primary " />

    </div>

    <div class="form-group">
        <p style="color:red">@ViewBag.error</p>
    </div>


    @Html.ActionLink("SignUp?", "Registration")
}
